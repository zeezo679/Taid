 <!-- Username Field -->
@model Demo.ViewModel.RegisterViewModel

<div class="modern-input-group mb-4">
    <input asp-for="Username"
           class="modern-input"
           id="username"
           placeholder=" "
           autocomplete="off" />
    <label for="username" class="modern-label">
        <span>Username</span>
    </label>
    <span asp-validation-for="Username" class="validation-error"></span>
</div>

