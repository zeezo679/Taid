@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Initialize Feather Icons
        feather.replace();
        
        // Handle validation summary display
        $(document).ready(function() {
            // Show validation summary if there are model errors
            var validationSummary = $('[asp-validation-summary]');
            if (validationSummary.find('ul li').length > 0) {
                validationSummary.show();
            } else {
                validationSummary.hide();
            }
            
            // Hide validation summary when user starts correcting errors
            $('.modern-input').on('input blur', function() {
                var hasErrors = $('.field-validation-error:visible').length > 0;
                if (!hasErrors) {
                    validationSummary.hide();
                }
            });
        });
    </script>
}
