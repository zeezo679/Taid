@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Initialize Feather Icons
        feather.replace();
        
        // Add floating label enhancement
        document.querySelectorAll('.form-floating input').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.classList.add('focused');
            });
            
            input.addEventListener('blur', function() {
                if (!this.value) {
                    this.parentElement.classList.remove('focused');
                }
            });
        });
        
        // Add loading state to form submission
        document.querySelector('form').addEventListener('submit', function() {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status"></span>Signing in...';
            submitBtn.disabled = true;
        });
        
        // Show validation summary if there are errors
        const validationSummary = document.querySelector('[asp-validation-summary]');
        if (validationSummary && validationSummary.innerHTML.trim()) {
            validationSummary.classList.remove('d-none');
        }
    </script>
}
