@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    bool isHome = currentController == "Home" && (currentAction == "Index" || string.IsNullOrEmpty(currentAction));
    bool isPrivacy = currentController == "Home" && currentAction == "Privacy";
    bool isInstructor = currentController == "Instructor";
    bool isCourse = currentController == "Course";
    bool isLogin = currentController == "Account" && currentAction == "Login";
    bool isRegister = currentController == "Account" && currentAction == "Register";
    bool isLogout = currentController == "Account" && currentAction == "Logout";
}
<nav class="navbar navbar-expand-lg navbar-dark shadow-sm mb-4">
    <div class="container">
        <!-- Brand -->
        <a class="navbar-brand fw-bold d-flex align-items-center"
           asp-area="" asp-controller="Home" asp-action="Index">
            <i data-feather="layers" class="me-2 text-primary" style="width: 24px; height: 24px;"></i>
            Demo
        </a>

        <!-- Mobile Menu Button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Desktop Nav -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center smooth-nav @(isHome ? "active" : "")" 
                       data-page="home"
                       asp-area="" asp-controller="Home" asp-action="Index">
                        <i data-feather="home" class="me-2" style="width: 16px; height: 16px;"></i>
                        Home
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center smooth-nav @(isInstructor ? "active" : "")"
                               data-page="instructors"
                               asp-area="" asp-controller="Instructor" asp-action="Index">
                                <i data-feather="users" class="me-2" style="width: 16px; height: 16px;"></i>
                                Instructors
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center smooth-nav @(isCourse ? "active" : "")"
                           data-page="courses"
                           asp-area="" asp-controller="Course" asp-action="Index">
                            <i data-feather="book-open" class="me-2" style="width: 16px; height: 16px;"></i>
                            Courses
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link position-relative d-flex align-items-center gap-1 smooth-nav px-3 py-2 rounded-pill fw-semibold @(isPrivacy ? "active bg-success bg-opacity-10 border border-success-subtle shadow-sm" : "text-body-secondary bg-body-tertiary bg-opacity-25")"
                       style="transition:all .25s;"
                       data-page="privacy"
                       asp-area="" asp-controller="Home" asp-action="Privacy"
                       aria-current="@(isPrivacy ? "page" : null)"
                       title="View our privacy & data protection policy">
                        <i data-feather="shield" class="me-1 @(isPrivacy ? "text-success" : "text-info")" style="width: 16px; height: 16px;"></i>
                        <span>Privacy</span>
                        <span class="badge rounded-pill bg-gradient bg-success-subtle text-success-emphasis ms-1 small border border-success-subtle">Secure</span>
                        @if(isPrivacy){<span class="position-absolute top-0 start-100 translate-middle p-1 bg-success border border-light rounded-circle"><span class="visually-hidden">Active</span></span>}
