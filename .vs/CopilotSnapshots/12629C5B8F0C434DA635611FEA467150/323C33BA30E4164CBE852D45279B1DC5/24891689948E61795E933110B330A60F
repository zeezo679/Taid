@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    bool isHome = currentController == "Home" && (currentAction == "Index" || string.IsNullOrEmpty(currentAction));
    bool isPrivacy = currentController == "Home" && currentAction == "Privacy";
    bool isInstructor = currentController == "Instructor";
    bool isCourse = currentController == "Course";
    bool isLogin = currentController == "Account" && currentAction == "Login";
    bool isRegister = currentController == "Account" && currentAction == "Register";
    bool isLogout = currentController == "Account" && currentAction == "Logout";
}
<nav class="navbar navbar-expand-lg navbar-dark shadow-sm mb-4">
    <div class="container">
        <!-- Brand -->
        <a class="navbar-brand fw-bold d-flex align-items-center"
           asp-area="" asp-controller="Home" asp-action="Index">
            <i data-feather="layers" class="me-2 text-primary" style="width: 24px; height: 24px;"></i>
            Demo
        </a>

        <!-- Mobile Menu Button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Desktop Nav -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center smooth-nav @(isHome ? "active" : "")" 
                       data-page="home"
                       asp-area="" asp-controller="Home" asp-action="Index">
                        <i data-feather="home" class="me-2" style="width: 16px; height: 16px;"></i>
                        Home
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center smooth-nav @(isInstructor ? "active" : "")"
                               data-page="instructors"
                               asp-area="" asp-controller="Instructor" asp-action="Index">
                                <i data-feather="users" class="me-2" style="width: 16px; height: 16px;"></i>
                                Instructors
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center smooth-nav @(isCourse ? "active" : "")"
                           data-page="courses"
                           asp-area="" asp-controller="Course" asp-action="Index">
                            <i data-feather="book-open" class="me-2" style="width: 16px; height: 16px;"></i>
                            Courses
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center smooth-nav @(isPrivacy ? "active" : "")"
                       data-page="privacy"
                       asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i data-feather="shield" class="me-2" style="width: 16px; height: 16px;"></i>
                        Privacy
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center smooth-nav @(isLogin ? "active" : "")"
                           data-page="login"
                           asp-area="" asp-controller="Account" asp-action="Login">
                            <i data-feather="log-in" class="me-2" style="width: 16px; height: 16px;"></i>
                            Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center smooth-nav @(isRegister ? "active" : "")"
                           data-page="register"
                           asp-area="" asp-controller="Account" asp-action="Register">
                            <i data-feather="user-plus" class="me-2" style="width: 16px; height: 16px;"></i>
                            Register
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center smooth-nav @(isLogout ? "active" : "")"
                           data-page="logout"
                           asp-area="" asp-controller="Account" asp-action="Logout">
                            <i data-feather="log-out" class="me-2" style="width: 16px; height: 16px;"></i>
                            Logout
                        </a>
                    </li>
                    <li class="nav-item d-flex align-items-center px-3">
                        <div class="d-flex align-items-center">
                            <i data-feather="user" class="me-2" style="width: 16px; height: 16px;"></i>
                            <span class="text-light">Hello, @User.Identity.Name</span>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
