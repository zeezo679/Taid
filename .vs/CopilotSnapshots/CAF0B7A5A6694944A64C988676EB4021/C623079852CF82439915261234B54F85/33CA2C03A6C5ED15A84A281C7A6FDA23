<!-- Add JavaScript for search functionality -->
<script>
document.getElementById('search')?.addEventListener('input', function(e) {
    const searchTerm = e.target.value.toLowerCase();
    const cards = document.querySelectorAll('[data-instructor-card]');
    
    cards.forEach(card => {
        const name = card.querySelector('[data-instructor-name]')?.textContent.toLowerCase() || '';
        const address = card.querySelector('[data-instructor-address]')?.textContent.toLowerCase() || '';
        
        if (name.includes(searchTerm) || address.includes(searchTerm)) {
            card.style.display = 'block';
        } else {
            card.style.display = 'none';
        }
    });
});
</script>



